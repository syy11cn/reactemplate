{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["DOM", "ES6"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
